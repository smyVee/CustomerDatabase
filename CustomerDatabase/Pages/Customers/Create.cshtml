@page
@model CustomerDatabase.Pages.Customers.CreateModel

@*Written by: Paul Smyth. Date 31/1/18. Version 1.0*@

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Record</h2>

<h4>Enter Customer Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.FullName" class="control-label"></label>
                <input asp-for="Customer.FullName" class="form-control" />
                <span asp-validation-for="Customer.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label"></label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Town" class="control-label"></label>
                <input asp-for="Customer.Town" class="form-control" />
                <span asp-validation-for="Customer.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    // List for the State drop down box
                    var stateItems = new List<SelectListItem>();
                    stateItems.Add(new SelectListItem() { Text = "NSW", Value = "NSW" });
                    stateItems.Add(new SelectListItem() { Text = "VIC", Value = "VIC" });
                    stateItems.Add(new SelectListItem() { Text = "QLD", Value = "QLD" });
                    stateItems.Add(new SelectListItem() { Text = "SA", Value = "SA" });
                    stateItems.Add(new SelectListItem() { Text = "ACT", Value = "ACT" });
                    stateItems.Add(new SelectListItem() { Text = "WA", Value = "WA" });
                    stateItems.Add(new SelectListItem() { Text = "NT", Value = "NT" });
                    stateItems.Add(new SelectListItem() { Text = "TAS", Value = "TAS" });
                }
                <label asp-for="Customer.State" class="control-label"></label>
                <select asp-for="Customer.State" class="form-control" 
                        asp-items="@new List<SelectListItem>(stateItems)">
                    <option>Select State</option>
                </select>
                <span asp-validation-for="Customer.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Postcode" class="control-label"></label>
                <input asp-for="Customer.Postcode" class="form-control" />
                <span asp-validation-for="Customer.Postcode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
